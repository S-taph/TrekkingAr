# Frontend environment variables for TrekkingAR (Vite)
# Copy to .env and fill values. Vite requires variables to start with VITE_

# Backend API URL (puerto 3003 por defecto)
VITE_API_BASE_URL=http://localhost:3003/api

# Frontend URL
VITE_FRONTEND_URL=http://localhost:5173

# Socket.IO configuration
VITE_SOCKET_IO_PATH=/socket.io
VITE_SOCKET_IO_URL=http://localhost:3003

# Google OAuth (opcional)
VITE_GOOGLE_CLIENT_ID=your-google-oauth-client-id

# Chatbot features
VITE_CHATBOT_ENABLED=true
VITE_LLM_MODEL=llama-3.1-8b-instant
