# Backend environment variables for TrekkingAR
# Copy this file to .env and fill in real values. Never commit .env with secrets.

# Runtime
NODE_ENV=development
# The backend currently reads PORT; we also provide PORT_BACK for consistency
PORT=3000
PORT_BACK=3000
FRONTEND_URL=http://localhost:5173

# JWT auth
JWT_SECRET=replace-with-a-secure-random-string
JWT_EXPIRES_IN=7d

# Database (MySQL)
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=trekkingar
DB_USER=root
DB_PASSWORD=your_mysql_password
# Alternatively, you can use a single DATABASE_URL (commented as example)
# DATABASE_URL=mysql://root:your_mysql_password@127.0.0.1:3306/trekkingar

# Google OAuth (used for social login)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Gmail SMTP (Nodemailer)
GMAIL_SMTP_USER=juanrojas.laboral@gmail.com
GMAIL_SMTP_PASS=your-app-password-or-oauth-token
# Optional comma-separated list of admin emails to notify
ADMIN_EMAILS=juanrojas.laboral@gmail.com

# Uploads / Multer
UPLOADS_DIR=./uploads
MAX_UPLOAD_MB=5

# Socket.IO
SOCKET_IO_PATH=/socket.io
# If you need CORS origins for Socket.IO (comma-separated)
SOCKET_IO_ORIGINS=http://localhost:5173

# Chatbot (Groq + Llama)
GROQ_API_KEY=your-groq-api-key
GROQ_PROJECT_ID=your-groq-project-id
LLAMA_MODEL=llama-3.1-8b-instant
LLM_TEMPERATURE=0.4
LLM_MAX_TOKENS=512

# Optional logging
LOG_LEVEL=info
